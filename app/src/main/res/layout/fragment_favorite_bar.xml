<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_page.tab_main_adapter.tab_fragments.FavoriteBar">

    <LinearLayout
        android:id="@+id/text_empty_warning_workshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="@dimen/layout_large_margin_64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_margin_medium_20dp"
            android:text="@string/text_favorite_case_empty"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium_20sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_favorite_case_empty_caveat"
            android:textColor="@color/ui_text_color"
            android:textSize="@dimen/text_size_medium_20sp">
        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>