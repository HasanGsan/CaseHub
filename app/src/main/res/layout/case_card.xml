<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="220dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/title_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Название кейса большое и привлекательное"
            android:textSize="24sp"
            android:textColor="#000"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iconFavorite" />

        <ImageView
            android:id="@+id/iconFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/favorite_false"
            app:layout_constraintTop_toTopOf="@id/title_card"
            app:layout_constraintBottom_toBottomOf="@id/title_card"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/description_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Короткое, но очень полезное описание кейса, которое необходимо уместить в 3 строки и не больше, потому что мы ценим время наше ..."
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/five_four_slate_gray"
            app:layout_constraintTop_toBottomOf="@id/title_card"
            app:layout_constraintStart_toStartOf="@id/title_card"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/mobile_platform_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/easy_level_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon1" />


        <ImageView
            android:id="@+id/icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/bad_case_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon2" />


        <ImageView
            android:id="@+id/iconCenter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/card_logo"
            android:scaleType="centerInside"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon3" />


        <ImageView
            android:id="@+id/icon5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/design_attach_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconCenter" />


        <ImageView
            android:id="@+id/icon6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/desktop_title_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon5" />


        <ImageView
            android:id="@+id/icon7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/analytic_attach_icon"
            android:scaleType="centerInside"
            android:background="@drawable/icon_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon6" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
