<?xml version="1.0" encoding="utf-8"?>
<resources>


    <color name="ui_text_color">#74777F</color>

    <style name="Theme.CaseHub" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

<!--    Theme.AppCompat.DayNight.NoActionBar-->

<!--    Кастомные стили для верстки-->

<!-- Toolbar_title -->
    <style name="CustomToolbarTitleTextStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!-- EditText_deleted_line -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@null</item>
        <item name="colorControlActivated">@null</item>
        <item name="colorControlHighlight">@null</item>
    </style>

    <!-- Кастомный стиль для поисковика -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/ui_toolbar_back</item>
        <item name="android:textColor">@color/ui_text_color</item>
        <item name="android:textColorHint">@color/ui_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>




    <!-- Кастомный стиль для кнопки создания кейсов -->

    <style name="button_customST_create_case" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/create_button_color</item>
        <item name="cornerRadius">14sp</item>
    </style>

    <!--    Кастомные стили для верстки-->

</resources>

